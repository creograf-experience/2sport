.page__title
    h1 Покупатели
.page__cpanel

.page__content
    table.table__build
      thead
        tr
          th Имя
          th e-mail
          th Телефон
          th Операции
      tbody
        tr(ng-repeat='customer in customers track by customer._id')
          td {{::customer.name}}
          td {{::customer.email}}
          td {{::customer.phone}}
          td.act
            a.btn.btn-sm.btn-primary(ui-sref='customersShow({customerId:customer._id})')
              span
            button.btn.btn-sm.btn-danger(
              ng-really-click='deleteCustomer(customer)'
              ng-really-message='Удалить запись?')
              span
